.container {
    box-sizing: border-box;
    height: 100%;
    background: #5cadff;
    color: #fff;
}
.header {
    position: fixed;
    top: 0;
    width: 100%;
    background: #5cadff;
    z-index: 99999;
}
.status-bar {
    background: #5cadff;
}
.title-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.title-bar>.icon {
    margin-left: 5px;
}
.title-bar>.title {
    width: 100%;
}
.title-bar>.title>view{
    /*width: 138px;*/
    margin: 0 auto;
    color: #fff;
    font-size: 16px;
    text-align: left;
}
.title-bar>.title>view>view.active {
    background: #fff;
    color: #5cadff;
}
.title-bar>.title>view>view.tab {
    padding: 2px 10px;
    display: inline-block;
}

.content .list{
    color: #1c2438;
    background: #fff;
    position: fixed;
    width: 100%;
    z-index: 10100;
}

.mask{
    width:100%;
    height:100%;
    position:fixed;
    background-color:#999;
    z-index:9999;
    /*top: 92px;*/
    left:0;
    opacity:0.5;
}
.content {
    position: absolute;
    z-index: 100000;
    width: 100%;
}
