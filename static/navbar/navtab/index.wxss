.container {
    box-sizing: border-box;
    height: 100%;
    background: #5cadff;
    color: #fff;
}
.header {
    position: fixed;
    top: 0;
    width: 100%;
    background: #5cadff;
    z-index: 99999;
}
.status-bar {
    background: #5cadff;
}
.title-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.title-bar>.icon {
    margin-left: 5px;
}
.title-bar>.title {
    width: 100%;
}
.title-bar>.title>view{
    width: 180px;
    margin: 0 auto;
    border-radius: 5px;
    border: 1px solid #fff;
    background: #5cadff;
    color: #fff;
    font-size: 14px;
    text-align: center;
}
.title-bar>.title>view>view.active {
    background: #fff;
    color: #5cadff;
}
.title-bar>.title>view>view.tab {
    width: 90px;
    display: inline-block;
}
