.center{
    /*background: #f8f8f9;*/
    /*padding-bottom: 20px;*/
    margin: 10px;
}

.search {
    padding: 20px;
    background: #5cadff;
    position: relative;
}

.list-search-box {
    display:flex;
    align-items:center;
    padding:0 30rpx;
    width:100%;
    height:70rpx;
    background:#ffffff;
    border-radius:90rpx;
    font-size:28rpx;
    box-sizing:border-box;
}
.list-search-box input {
    width:100%;
    padding-left:10rpx;
}

.center .list {
    /*border: 1px solid #ccc;*/
    border-radius: 2px;
    box-shadow: 0 0 5px #ccc;
    padding: 10px;
    margin-bottom: 15px;
}
.search-list{
    border-bottom: 1px solid #F7F8F8;
}
.info{
    text-align: center;
    color: #808695;
}
