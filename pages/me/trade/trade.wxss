.center {
    background: #fff;
    padding-bottom:10px;
}
.list {padding: 10px; border-bottom: 1px solid #dddee1;}
.list >view{
    display: inline-block;
}
.list>view>image{
    width: 40px;
    height: 40px;
}
view.title {
    font-size: 18px;
}
view.time {
    font-size: 12px;
    color: #80848f;
}
.list>view:nth-child(2){
    padding-left: 10px;
}
.list>view:nth-child(3){
    height: 40px;
    line-height: 40px;
    float: right;

}


.nodata{
    background: #f8f8f9;
    min-height: 100vh;
}
.nodata>view>image{
    width: 80px;
    height: 80px;
    margin: 0 auto;
}
.nodata>view{
    width: 160px;
    height: 100px;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -80px;
    margin-top: -50px;
    text-align: center;
    color: #80848f;
}
