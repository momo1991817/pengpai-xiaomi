.reserve {
    background: #f8f8f9;
    padding-bottom: 10px;
}
.reserve>.content .list{
    margin-top: 10px;
    padding: 10px 5px 5px 5px;
    background: #fff;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}

.detail>view,.footer>view{
    float: left;
}

.detail>view.airline,
.footer>view.airline,.footer>view.ticket{
    width: 40%;
    text-align: center;
}
.detail>.icons,.footer>view.seat{
    width: 20%;
    text-align: center;
}
.detail>.icons{
    height: 52px;
    line-height: 52px;
}
.detail>.icons>image{
    width: 30px;
    height: 30px;
    margin-top: 11px;
}
.airline>.time{
    font-size: 24px;
}
.airline>.airport {
    font-size: 16px;
    color: #80848f;
}
.header {padding:0 15px;}
.footer {
    color: #80848f;
    font-size: 14px;
    height: 30px;
    line-height: 30px;
}

.footer>.ticket{
    color: #f00;
    text-align: center;
}

.clearfix:after {
    content: ".";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;
}
.header>text{
    background: #ff9900 ;
    color: #fff;
    padding: 2px 5px;
    border-radius: 5px;
}
.header>.title {
    float: right;
    margin-right: 20px;
    color: #2d8cf0;
    font-weight: bold;
}

.nodata{
    background: #f8f8f9;
    min-height: 100vh;
}
.nodata>view>image{
    width: 80px;
    height: 80px;
    margin: 0 auto;
}
.nodata>view{
    width: 140px;
    height: 100px;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -70px;
    margin-top: -50px;
    text-align: center;
    color: #80848f;
}
