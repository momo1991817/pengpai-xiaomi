.calender {
    background: #fff;
    padding-bottom:10px;
}
.date-show{
    position: relative;
    width:125px;
    font-size: 22px;
    color: #282828;
    text-align: center;
    margin: 30px auto 5px;
}
 .lt-arrow,.rt-arrow{
     position: absolute;
     top: 1px;
     width: 30px;
     height:30px;
}
.lt-arrow{
    padding-right: 10px;
    left: -55px;
}

.rt-arrow{
    right: -50px;
    padding-left: 10px;
}
 .header{
    font-size: 0;
    padding: 0 12px;
      }
 .header>view{
    display: inline-block;
    width: 14.285%;
    color: #333;
    font-size: 15px;
    text-align: center;
    border-bottom: 1px solid #D0D0D0;
    padding: 20px 0;
}
.weekMark{
    position: relative;
}
.weekMark view{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    border-bottom: 1px solid #22A7F6;
}
.date-box{
    font-size: 0;
    padding: 5px 0;
}
.date-box>view{
    position: relative;
    display: inline-block;
    width: 14.285%;
    color: #020202;
    font-size: 20px;
    text-align: center;
    vertical-align: middle;
    margin: 7px 0;
}
.date-head{
    height: 30px;
    line-height: 30px;
    font-size: 13px;
}
 .nowDay .date-head {
     width: 30px;
     border-radius: 50%;
     text-align: center;
     color: #fff;
     background-color: #22A7F6;
     margin: 0 auto;
 }
 .date-weight{
     font-size: 11px;
    padding: 8px 0;
}
 .nowDay .date-weight{
       color: #22A7F6;
}
.one{
    position: absolute;
    bottom: 0;
    right: 3px;
    width: 15px;
    height: 25px;
    border-radius: 50%;
    background-color: red;
}
 .two{
    position: absolute;
    bottom: 15px;
    right: 3px;
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: blue;
}

 .passDay>.date-head>view {
     color: #bbbec4;
 }
