.home { background: #F8F8F9; }
.home>image {
    width: 100%;
    height: 180px;
}
.home>.tab {margin-bottom: 10px;}
.home>.content {background: #fff;}

.info,.info-fly{ height: 40px;}
.info >view {float: left;}
.clearfix:after {
    content: ".";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;
}
.info >view.info-fly {
    width: 42%;
    overflow:hidden;
    white-space:nowrap;
    text-overflow:ellipsis;
    border-bottom: 1px solid #dddee1;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    text-align: center;
}
.info >view.info-fly>text{
    height: 100%;
    /*padding: 7px 0;*/
}
.info>view.info-icon {
    width: 16%;
    height: 30px;
    text-align: center;
    margin-top: 4px;
}
.info>view.info-icon>image{
    width: 30px;
    height: 30px;
}


.info-fly.date{
    /*font-size: 16px;*/
    padding-left: 0;
    padding-right: 0;
}
.info-title{
    display: inline-block;
    font-size: 12px;
    margin-left: 5px;
    color: #80848f;
}
.info-close{
    display: inline-block;
    margin-right: 5px;
}
.info-fly.date .info-title{
    margin-left: 0;
}
.info-fly.date .info-close{
    margin-right: 0;
}

.single>view,.double>view{
    display: inline-block;
}
.single>view.info-add{
    margin-right: 5px;
    border: 1px solid #dddee1;
    width: 20px;
    height: 20px;
    line-height: 20px;
    font-size: 16px;
    border-radius: 50%;
    margin-left: 5px;
    color: #80848f;
}
.single>view.info-name{
    color: #80848f;

}



.airlineBorder{
    padding: 7px 15px;
    border-bottom: 1px solid #dddee1;
}
.btn {
    width:95%;
    margin:10px auto;
}
.btn button {
    background: #2D8CF0;
    margin: 20px 0 10px;
    color: #fff;
}


.picker>text {margin-right: 35px; color:#80848f;}
.airlinePadding{padding-left: 34px;}
.picker {height: 25px;}

.navitageto{
    position: fixed;
    padding: 4px 8px;
    background: rgba(0,0,0,0.2);
    color: #fff;
    border-radius: 15px;
    font-size: 14px;
    left: 10px;
    z-index: 10000;
}
