/***********日期选择条***********/
.scroll {
    background: #5CADFF;
    height: 77px;
    width: 100%;
    white-space: nowrap;
    overflow: hidden;

    padding: 0 10px;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    position: fixed;
    z-index: 10000;
    box-shadow: 0 5px 10px rgba(0, 0, 0, 0.19), 0 3px 3px rgba(0, 0, 0, 0.23);
}
.scroll .time-list {
    display: inline-block;
    color: #fff;
    padding: 15px 10px;
    width: 14%;
    text-align: center;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}
.scroll .time-list.active .date {
    background: #fff;
    color: #5CADFF;
    border-radius: 50%;
}


.scroll .date {
    font-size: 16px;
    height: 21px;
    margin-top: 10px;
}
.scroll .week {font-size: 12px;height: 16px;}


/***********时间轴***********/
.timeline{margin-left: 20px;position:relative;}

.timeline-item-tail {
    height: 100%;
    border-left: 1px solid #e8eaec;
    position: absolute;
    left: 6px;
    top: 0;
}
.timeline-item-head-blue {
    border-color: #2d8cf0;
    color: #2d8cf0;
}

.timeline-item-head{
    width: 14px;
    height: 14px;
    border-radius: 50%;
    position: absolute;
    z-index: 991;
}
.timeline-item-head-blue {
    background-color: #2d8cf0;
    /*border: 2px solid #2d8cf0;*/
}
.timeline-item-head-yellow,
.timeline-item-content-box-time-yellow>view{
    background-color: #f39a08;
    color: #fff;
}

.timeline-item-head-red{
    background-color: #FFB08F;
}

.timeline-item-content {
    padding: 1px 20px 10px 24px;
    font-size: 12px;
    position: relative;
    top: -13px;
}
.timeline-item-content-box{
    padding: 10px;
    border-radius: 5px;
    background: #ffffff;
    box-shadow: 0 1px 20px rgba(0, 0, 0, 0.3);
    margin-bottom: 10px;
}
.timeline-item-content-box-time{
    padding-bottom: 20px;
}
.timeline-item-content-box-time>view{
    display: inline;
    padding: 4px 10px;
    margin-bottom: 10px;
    border-radius: 18px;
    font-size: 16px;
}
.timeline-item-content-box-time-red>view{
    border: 1px solid #FFB08F;
    background: #FFEFE6;
    color: #495060;
}

.timeline-time{
    font-size: 16px;
    vertical-align: middle;
    height: 40px;
}
.timeline-time>.timeline-clock{
   display: inline-block;
}
.timeline-time>.time-delete{
    float: right;
    background: #ff9900;
    color: #fff;
    border-radius: 5px;
    font-size: 12px;
    padding: 2px 8px 4px;
}
.timeline-time>.time-delete>view{
    display: inline-block;
    vertical-align: middle;
}

.timeline-passenger{
    margin-left: 20px;
}
.timeline-passenger>.passenger{
    display: inline-block;
    color: #808695;
    margin-right: 12px;
    font-size: 14px;
}

