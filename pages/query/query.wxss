.query {
    background: #f8f8f9;
    padding-bottom: 10px;
    /*padding-top: 35px;*/
}
.query .content .list{
    margin-top: 10px;
    padding: 10px 5px 5px 5px;
    background: #fff;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}

.detail>view,.footer>view{
    float: left;
}

.detail>view.airline,
.footer>view.airline,.footer>view.ticket{
    width: 40%;
    text-align: center;
}
.detail>.icons,.footer>view.seat{
    width: 20%;
    text-align: center;
}
.detail>.icons{
    height: 52px;
    line-height: 52px;
}
.detail>.icons>image{
    width: 30px;
    height: 30px;
    margin-top: 11px;
}
.airline>.time{
    font-size: 24px;
}
.airline>.airport {
    font-size: 16px;
    color: #80848f;
}
.header {padding-left: 15px; height: 28px;}
.footer {
    color: #80848f;
    font-size: 14px;
    height: 30px;
    line-height: 30px;
}

.footer>.ticket{
    color: #f00;
    text-align: center;
}

.clearfix:after {
    content: ".";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;
}
.header>text{
    background: #ff9900 ;
    color: #fff;
    padding: 2px 5px;
    border-radius: 5px;

}
.header>.btn {
    float: right;
    margin-right: 20px;
}
.header>.btn>view{
    height: 30px;
}
.header>.btn button {
    background: #2D8CF0;
    font-size: 14px;
    color: #fff;
    padding: 0 8px;
    height: 25px;
    line-height: 25px;
}
.header>.btn>.selectBtn>button{
    background: #bbbec4;
}

.query .error {
    color: #80848f;
    text-align: center;
}
.query  .volage {
    background: #fff;
    color:  #ff9900;
    text-align: center;
    font-size: 12px;
    padding: 10px 0;
}
.query  .volage.real_error{
    color: #ed3f14;
}

