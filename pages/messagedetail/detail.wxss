.modal-mask {
    position:fixed;
    top:0;
    left:0;
    right:0;
    bottom:0;
    background:rgba(0,0,0,.7);
    z-index:1200;
    transition:all .2s ease-in-out;
    opacity:1;
}

.modal {
    position:fixed;
    overflow:auto;
    top:0;
    right:0;
    bottom:0;
    left:0;
    height:100%;
    z-index:1200;
    display:flex;
    outline:0;
    -webkit-box-align:center;
    align-items:center;
    -webkit-box-pack:center;
    justify-content:center;
    transform:translateZ(1px);
    /*opacity:1;*/
    /*visibility:hidden;*/

}

.modal-main {
    width:270px;
    position:relative;
}
.modal-content {
    border-radius:7px;
    padding-top:15px;
    position:relative;
    background-color:#fff;
    border:0;
    background-clip:padding-box;
    text-align:center;
    height:100%;
    overflow:hidden;

}
.modal-title {
    padding:6px 15px 15px;
    margin:0;
    font-size:18px;
    line-height:1;
    color:#1c2438;
    text-align:center;
}
.modal-btn {
    margin-top: 10px;
    border-top: 1px solid #dddee1;
}
